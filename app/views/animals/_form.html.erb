

  <div class="form-color">
  <%= simple_form_for(@animal) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :animal_type, collection: Animal::TYPES %>
      <%= f.input :size, collection: Animal::SIZES %>
      <%= f.input :energy, collection: Animal::ENERGY %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: "btn btn-info btn-block form-buttom" %>


  <% end %>
</div>

