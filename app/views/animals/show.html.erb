<h1><%=@animal.name%></h1>

<div>
  <p><%= @animal.description %></p>
  <p><%= @animal.animal_type %></p>
  <p><%= @animal.size %></p>
  <p><%= @animal.energy %></p>

  <%#= @Animal.picture %>
  <% if policy(@animal).edit? %>
    <%= link_to "Edit", edit_animal_path(@animal) %>
  <% end %>

  <% if policy(@animal).destroy? %>
    <%= link_to "Delete", animal_path(@animal),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  <% end %>

  <%= link_to "Back", animals_path %>
</div>

