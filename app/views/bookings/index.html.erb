
<div class="book-back">
  <h1 class="booking-header">Your Bookings</h1>
  <div class="container-index">
    <!-- <div class="book-box "> -->
  <div class="row justify-content-between">

      <% @bookings.each do |booking| %>
        <div class="confirmation-box col-5">
          <%= cl_image_tag booking.animal.photo%>
          <div class="main-text">
            </i> Congratulations, <%= current_user.first_name %>! You have booked <%= booking.animal.name %>.
            <br>
            <p>You will meet your petpal on July 30th, 2019.</p>

            <div class="d-flex justify-content-between mr-4 ml-4">
              <p class="delete-book"> <%= link_to "Cancel Booking", booking_path(booking),
              method: :delete,
              data: { confirm: "Are you sure?" },  class: "btn btn-outline-info btn-sm"  %> </p>
              <p><%= link_to "About #{booking.animal.name}", animal_path(booking.animal), class: "btn btn-outline-info btn-sm"  %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<!-- </div> -->
</div>


